{
  "name": "Kegbot",
  "version": "0.0.1",
  "slug": "kegbot",
  "description": "Flow-based programming for the Internet of Things",
  "url": "https://github.com/johnpdowling/hassio-addons/kegbot",
  "webui": "[PROTO:ssl]://[HOST]:[PORT:80]",
  "ingress": true,
  "ingress_port": 0,
  "panel_icon": "mdi:keg",
  "startup": "application",
  "homeassistant": "0.92.0b2",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "ports": {
    "80/tcp": 2080
  },
  "ports_description": {
    "80/tcp": "Web interface"
  },
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "manager",
  "homeassistant_api": true,
  "host_network": true,
  "auth_api": true,
  "auto_uart": false,
  "gpio": false,
  "privileged": [
  ],
  "devices": [
  ],
  "apparmor": false,
  "map": [
    "config:rw",
    "ssl"
  ],
  "options": {
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "kegbot_db": "kegbot",
    "db_host": "localhost",
    "db_port": "3306",
    "db_user": "kegbot",
    "db_pass": ""
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
    "ssl": "bool",
    "certfile": "str",
    "kegbot_db": "str",
    "db_host": "str",
    "db_port": "int",
    "db_user": "str",
    "db_pass": "str",
    "i_like_to_be_pwned": "bool?",
    "leave_front_door_open": "bool?"
  }
}
